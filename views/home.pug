extends base.pug

block scripts
    script(src="../static/script.js")

block style
    style
        include ../static/style.css

block content
    section#intro
        div.middle
          div Welcome to Hitesh Academy
          div.small Eat Dance Sleep repeat
    
    section#features
          h1 Features
          div.fhead
            div.card
              div.simg
                img(src="../static/step1.png", alt="moves")
              div.ctxt
                p Best dance academy
            div.card
              div.simg
                img(src="../static/step2.png", alt="moves")
              div.ctxt
                p Best dance academy
            div.card
              div.simg
                img(src="../static/step3.png", alt="moves")
              div.ctxt
                p Best dance academy
    
    section#contact
      form(action="/contact", method="post", class= "form")
        h2 Contact Us
        label(for="name") Name: 
        input(
          placeholder = 'Enter your name'
          type='text'
          name='name'
        )
        label(for="email") E-mail: 
        input(
          placeholder = 'Enter your E-mail address'
          type='email'
          name='email'
        )
        label(for="age") Age: 
        input(
          placeholder = 'Enter your Age'
          type='number'
          name='age'
        )
        input.btn(
          type='submit'
          name='submit'
        )
